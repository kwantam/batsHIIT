<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    >

	<android.support.v7.widget.Toolbar
		android:id="@+id/main_toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/colorPrimary"
		android:minHeight="?attr/actionBarSize"
		android:theme="?attr/actionBarTheme" />

	<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <View style="@style/SpacerW5" />
    <EditText android:id="@+id/edit_work"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:gravity="right"
        android:text="@string/work_dflt" />
    <View style="@style/SpacerW1" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:text="@string/work_time"
        android:textSize="18sp"
        />
</LinearLayout>    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <View style="@style/SpacerW5" />
    <EditText android:id="@+id/edit_break"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:gravity="right"
        android:text="@string/break_dflt" />
    <View style="@style/SpacerW1" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:text="@string/break_time"
        android:textSize="18sp"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <View style="@style/SpacerW5" />
    <EditText android:id="@+id/edit_rest"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:gravity="right"
        android:text="@string/rest_dflt" />
    <View style="@style/SpacerW1" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:text="@string/rest_time"
        android:textSize="18sp"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <View style="@style/SpacerW5" />
    <EditText android:id="@+id/edit_intv"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:gravity="right"
        android:text="@string/intv_dflt" />
    <View style="@style/SpacerW1" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:text="@string/num_intv"
        android:textSize="18sp"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <View style="@style/SpacerW5" />
    <EditText android:id="@+id/edit_block"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:gravity="right"
        android:text="@string/block_dflt" />
    <View style="@style/SpacerW1" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:text="@string/num_block"
        android:textSize="18sp"
        />
</LinearLayout>
