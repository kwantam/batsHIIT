<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/hiitRunLayout"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:text="@string/zero_string"
    android:gravity="center"
    android:textSize="80sp"
    android:id="@+id/nSeconds"
    />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/second_string"
    android:gravity="center"
    android:textSize="24sp"
    />
<TextView 
    android:id="@+id/nIntervals"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/zero_string"
    android:gravity="center"
    android:textSize="80sp"
    />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/intv_string"
    android:gravity="center"
    android:textSize="24sp"
    />
<TextView
    android:id="@+id/nBlocks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/zero_string"
    android:gravity="center"
    android:textSize="80sp"    
    />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/block_string"
    android:gravity="center"
    android:textSize="24sp"
    />

    <Space
        android:layout_width="match_parent"
        android:layout_height="71dp" />

    <Button
        android:id="@+id/pause_button"
        style="@style/FolkertButtonText"
        android:layout_width="300dp"
        android:layout_height="92dp"
        android:background="@drawable/btn_yellow"
        android:text="@string/pause" />

</LinearLayout>
